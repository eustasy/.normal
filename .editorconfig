# EditorConfig <http://EditorConfig.org>
root = true

# eustasy defaults
[*]
charset = utf-8
end_of_line = lf
indent_size = tab
indent_style = tab
insert_final_newline = true
max_line_length = 140
tab_width = 4

[*.{hs,py,yml}]
indent_style = space
indent_size = 2
tab_width = 2

# Markup files
[*.{html,xml}]
tab_width = 2
